diff --git a/pkgs/tools/system/runit/diet.nix b/pkgs/tools/system/runit/diet.nix
new file mode 100644
index 0000000..e9183a9
--- /dev/null
+++ b/pkgs/tools/system/runit/diet.nix
@@ -0,0 +1,54 @@
+{ stdenv, fetchurl, dietlibc }:
+
+let
+  branch = "diet";
+  pkg = "runit";
+  ver = "2.1.2";
+  web = http://smarden.org/runit;
+in stdenv.mkDerivation rec {
+  name = "${branch}-${pkg}-${ver}";
+
+  src = fetchurl {
+    url = "${web}/${pkg}-${ver}.tar.gz";
+    sha256 = "0b1arw3jqixwzfvl482sd11963dq7qm7gc6ly8aaqn9gnckjvkzz";
+  };
+
+  sourceRoot = "admin/${pkg}-${ver}";
+
+  patches = [
+    ./compile.patch
+  ];
+
+  buildInputs = [dietlibc];
+
+  configurePhase = ''
+    echo "diet gcc -nostdinc" > src/conf-cc
+    echo "diet gcc -s -static" > src/conf-ld
+  '';
+
+  buildPhase = "./package/compile";
+
+  installPhase = ''
+    mkdir -p $out/bin
+    for BIN in `cat package/commands`; do
+      cp command/$BIN $out/bin
+    done
+    mkdir -p $out/man/man8
+    cp man/*.8 $out/man/man8
+  '';
+
+  allowedReferences = ["out"];
+  dontPatchShebangs = true; # /bin/sh
+  dontStrip = true; # diet does not need stripping
+  dontPatchELF = true; # we produce static binaries
+
+  meta = {
+    description = "UNIX init scheme with service supervision";
+    homepage = "${web}";
+    license = stdenv.lib.licenses.bsd3;
+    platforms = stdenv.lib.platforms.gnu;
+    maintainers = with stdenv.lib.maintainers; [ tzeman ];
+  };
+}
+
+# vim: et ts=2 sw=2 
